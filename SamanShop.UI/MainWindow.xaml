<Window x:Class="SamanShop.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamanShop.UI"
        mc:Ignorable="d"
        Title="صدور فاکتور" Height="638" Width="1156"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Invoice Number -->
            <RowDefinition Height="Auto"/>
            <!-- Customer Number -->
            <RowDefinition Height="Auto"/>
            <!-- Save Button -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Invoice Number -->
        <Label Grid.Row="0" Grid.Column="0"
               Content="شماره فاکتور:"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 x:Name="invoiceNumbertxt"
                 Width="150"
                 Margin="5"/>

        <!-- Customer Number -->
        <Label Grid.Row="1" Grid.Column="0"
               Content="شماره مشتری:"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Margin="35,0,0,55" Grid.RowSpan="2"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 x:Name="customerNumbertxt"
                 Width="150"
                 Margin="5"/>

        <!-- Save Button -->
        <Button Grid.Row="2" Grid.ColumnSpan="2"
                Content="💾 ذخیره فاکتور"
                x:Name="btnSave"
                Width="150"
                Height="35"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#4CAF50"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand" Click="btnSave_Click"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Center" Name="paymentlst" Margin="0,51,0,0" Grid.Row="3" VerticalAlignment="Top" Width="120" SelectionChanged="paymentlst_SelectionChanged"/>
        <DataGrid x:Name="ProductsGrid"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  Margin="87,10,571,258" Grid.ColumnSpan="2" Grid.Row="3"/>

    </Grid>
</Window>
